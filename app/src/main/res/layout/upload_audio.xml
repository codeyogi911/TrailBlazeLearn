<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.nus.trailblazelearn.activity.UploadAudioActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/audio_name"
    android:layout_margin="10dp"
    android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_icon_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/audio_name">

        <ImageButton android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/play_button"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:background="@color/cardView"
            android:layout_marginRight="40dp"
        />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/pause_button"
            android:src="@drawable/ic_pause_black_24dp"
            android:layout_marginRight="40dp"
            android:background="@color/cardView" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/stop_button"
            android:src="@drawable/ic_stop_black_24dp"
            android:background="@color/cardView"/>
    </LinearLayout>

    <include layout="@layout/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_icon_layout"
        android:layout_marginTop="@dimen/text_margin"
        android:id="@+id/include" />

</RelativeLayout>
