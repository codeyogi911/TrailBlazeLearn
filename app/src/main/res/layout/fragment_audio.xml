<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_audio_linear_layout"
    android:orientation="vertical"
    tools:context="edu.nus.trailblazelearn.fragment.FragmentAudio">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/audio_recycler_view">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_files_not_found"
        android:text="NO AUDIO FILES ATTACHED"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
