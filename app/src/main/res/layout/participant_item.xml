<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/participant_item"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/cardView">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/participant_name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/participant_description"
            android:layout_below="@+id/participant_name"
            android:textSize="15dp"
            android:maxLines="3"
            android:textColor="@color/cardview_dark_background"
            android:paddingTop="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_description"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_icon"
            android:src="@drawable/ic_collections_black_24dp"
            android:paddingTop="5dp"
            android:layout_marginRight="80dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_icon"
            android:src="@drawable/ic_video_library_black_24dp"
            android:paddingTop="5dp"
            android:layout_marginRight="75dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audio_icon"
            android:src="@drawable/ic_audiotrack_black_24dp"
            android:paddingTop="5dp"
            android:layout_marginRight="75dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/document_icon"
            android:src="@drawable/ic_attachment_black_24dp"
            android:paddingTop="5dp"
            />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
