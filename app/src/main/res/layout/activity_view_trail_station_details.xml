<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="16dp"
    tools:context="edu.nus.trailblazelearn.activity.TrailStationDetailsActivity">

    <TextView
        android:id="@+id/StationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="16dp"
        android:text="Station Name"
        android:layout_alignParentLeft="true"
        app:layout_constraintTop_toTopOf="@id/StationInstructions"
        app:layout_constraintBottom_toBottomOf="@+id/tb_trail_details"/>

    <TextView
        android:id="@+id/StationInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:text="TextView"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/station_name"/>

    <Button
        android:id="@+id/btn_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/StationInstructions"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="100dp"
        android:onClick="participantListRedirection"
        android:text="Activities" />


    <Button
        android:id="@+id/btn_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/StationInstructions"
        android:layout_alignParentBottom="true"
        android:onClick="joinDiscussion"
        android:layout_marginBottom="100dp"
        android:text="Join Discussion" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_trail_details"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/StationName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginTop="16dp" />

</RelativeLayout>
